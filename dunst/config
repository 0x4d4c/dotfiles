[global]
  format = "<b>%s</b>\n%b\n(%a)"
  follow = mouse
  geometry = "200x5-6+30"
  indicate_hidden = yes
  shrink = yes
  separator_height = 2
  padding = 8
  horizontal_padding = 8
  markup = full
  frame_width = 1
  separator_color = frame
  sort = yes
  alignment = center
  word_wrap = yes
  ignore_newline = no
  stack_duplicates = yes
  hide_duplicate_count = false
  sticky_history = yes
  show_age_threshold = 60
  idle_threshold = 300
  line_height = 0
  startup_notification = false

[shortcuts]
  close = ctrl+space
  close_all = ctrl+shift+space
  history = ctrl+grave
  context = ctrl+shift+period

